{% extends "_page.html.twig" %}

{% block content %}
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Прізвище</th>
                <th>Ім'я</th>
                <th>По батькові</th>
            </tr>
        </thead>
        <tbody>
        {% for record in records %}
            <tr>
                <td>{{ record.id }}</td>
                <td>{{ record.name_last }}</td>
                <td>{{ record.name_first }}</td>
                <td>{{ record.name_patronymic }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
